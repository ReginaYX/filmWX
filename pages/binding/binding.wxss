/* pages/binding.wxss */
.checkmpBg{
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.checkmpBox{
  box-sizing: border-box;
  border-radius: 20rpx 20rpx 0 0;
  padding: 55rpx 28rpx;
  min-height: 100vh;
}

.checkmpTitle{
  font-size:32rpx;
  color:rgba(0,0,0,1);
  line-height:45rpx;
  font-weight: 600;
}


.checkmpDesc{
  font-size:26rpx;
  color:rgba(108,111,192,1);
  line-height:37rpx;
  margin-top: 20rpx;
  text-align: center;
}