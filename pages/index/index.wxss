/**index.wxss**/
page{
  background: rgba(254,105,13,1);
}

.indexPage{
  box-sizing: border-box;
  border-radius: 20rpx 20rpx 0 0;
  padding: 26rpx 28rpx;
  background: #fff;
  min-height: 100vh;
}

.topDayBox{
  width:100%;
  height:54rpx;
  background:#FFF1E9;
  border-radius:30px;
  padding: 0 96rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.topDayBox>.iconBox{
  font-size: 28rpx;
  color: #666;
  height: 100%;
  width: 40rpx;
  text-align: center;
}

.topDayBox>.iconBox icon{
  margin-top: -6rpx
}

.topDayBox .dayInfo{
  display: flex;
  align-items: center;
  margin: 0 38rpx 0 36rpx;
}

.topDayBox .dayInfo icon{
  font-size: 32rpx;
  color: #F45258;
  margin: -14rpx 10rpx 0 0;
}

.topDayBox .dayInfo>view{
  font-size: 30rpx;
  color: #000;
}

.indexTop{
  width: 100%;
  height:98rpx; 
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.indexTop .topTitle{
  font-size:36rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 50%;
}

.indexTop .topRight{
  font-size:28rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
}

/* 空状态 */
.nullNotice{
  width: 100%;
  height: calc(100vh - 100rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.nullNotice>text{
  font-size:28rpx;
  color:rgba(0,0,0,1);
  line-height:46rpx;
}

.nullNotice .link{
  font-size: 24rpx;
  color: #6b70ba;
  text-decoration: underline;
}

.nullNotice .show{
   display:show;
}
.nullNotice .hide{
   display:none;
}

/* 地址栏 */
.locationBox{
  display: flex;
  align-items: center;
  height: 32rpx;
  max-width: 50%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.locationBox icon{
  color:#999;
  font-size: 32rpx;
  display: block;
  margin: -10rpx 10rpx 0 0 ;
}

.locationBox .title{
  color:#999;
  font-size: 28rpx;
}

/* 天气 */
.weatherBox{
  position: relative;
  width:100%;
  height:192rpx;
  border-radius:20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 40rpx 20rpx 34rpx;
  overflow: hidden;
}

.weatherBox>image{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 0;
}

.weatherBox .skyBox{
  position: absolute;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
}

.weatherBox .skyBox>image{
  width: 100rpx;
}

.weatherBox .skyBox .skyTitle{
  color: #fff;
  font-size: 36rpx;
  margin-top: 10rpx;
}

.weatherBox .weatherRightBox{
  width: calc(100vw - 280rpx);
  margin-top: 6rpx;
  position: absolute;
  right: 34rpx;
  z-index: 1;
}

.weatherBox .weatherRightBox .weatherInfoBox{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.weatherBox .weatherRightBox .weatherInfoBox .weatherInfoItem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
  flex-shrink: 0;
}

.weatherBox .weatherRightBox .weatherInfoItem .weatherInfoTitle{
  font-size:24rpx;
  color:rgba(255,255,255,1);
  line-height:24rpx;
  flex-shrink: 0;
}

.weatherBox .weatherRightBox .weatherInfoItem .weatherInfoDesc{
  font-size:30rpx;
  color:rgba(255,255,255,1);
  line-height:30rpx;
  margin-top: 12rpx;
  flex-shrink: 0;
}

.weatherBox .weatherRightBox .dayInfo{
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height:40rpx;
  text-align: right;
  margin-top: 25rpx;
}

/* 拍摄时间 */
.cycleBox{
  height: 86rpx;
  border-bottom: 1rpx solid rgba(151,151,151,0.3);
  font-size: 28rpx;
  color: #999;
  line-height: 86rpx;
  margin-top: 8rpx;
}

.cycleBox>text{
  color: #000;
}

/* 场景信息 */
.noticeBox{
  padding-top: 26rpx;
}

.noticeBox .noticeTitle{
  font-size:36rpx;
  color:rgba(0,0,0,1);
  line-height:36rpx;
  margin: 30rpx 0;
  overflow: hidden;
  height: 36rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 100%;
}

.noticeBox  .nullBox>icon{
  margin-top: 14%
}

.noticeBox .sceneBox{
  width:100%;
  height:200rpx;
  background:rgba(255,255,255,1);
  border-radius:4px;
  position: relative;
  border-left: 4px solid rgba(108,111,192,1);
  padding: 20rpx 26rpx;
  box-sizing: border-box;
  box-shadow: 0 0 18rpx 6rpx rgba(108,111,192,0.1);
  margin: 22rpx 0 0;
}

.noticeBox .sceneBox .sceneTitle{
  font-size:26rpx;
  color:rgba(0,0,0,1);
  line-height:26rpx;
  width: calc(100% - 170rpx);
  overflow: hidden;
  height: 26rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.noticeBox .sceneBox .sceneNum{
  width:170rpx;
  height:60rpx;
  background:rgba(51,197,143,1);
  border-radius:0px 0px 10rpx 10rpx;
  position: absolute;
  right: 18rpx;
  top: 0;
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height:60rpx;
  text-align: center;
}

.noticeBox .sceneBox .actorBox{
  display: flex;
  align-items: center;
  width: 100%;
  margin-top: 38rpx;
}

.noticeBox .sceneBox .actorBox icon{
  font-size: 32rpx;
  color: #F45258;
  margin: -14rpx 10rpx 0 0;
}

.noticeBox .sceneBox .actorBox .actorTitle{
  font-size:26rpx;
  line-height: 26rpx;
  color:rgba(0,0,0,1);
  overflow: hidden;
  height: 26rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.noticeBox .sceneBox .actorBox .actorTitle>text{
  font-size:26rpx;
  color:#727272;
  overflow: hidden;
  height: 26rpx;
  line-height: 26rpx;
}

.noticeBox .sceneBox .actorBox.toolBox{
  margin-top: 20rpx
}

.noticeBox .sceneBox .actorBox.toolBox icon{
  font-size: 36rpx;
  margin-right: 9rpx;
  color: #37C591;
}

/* 日历 */
.changeDate{
  z-index: 200;
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.calendar {
  background-color: #fff;
  padding-top: 10rpx;
  border-radius: 5rpx;
}
.calendarHeader{
  color: #666
}
.calendarBoard{
  color: #888;
}
.shade{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background-color: rgba(0,0,0,0.8);
  opacity: 0.5;
  overflow: hidden;
}
