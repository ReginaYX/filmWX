/* pages/feedback/feedback.wxss */
.textareaBox:first-child{
  margin-bottom: 36rpx
}

.textareaBox .inputTitle{
  font-size:30rpx;
  color:rgba(0,0,0,1);
  line-height:42rpx;
  margin-bottom: 22rpx;
}

.textareaBox textarea{
  width: 100%;
  height: 248rpx;
  background:rgba(0,0,0,0.06);
  border-radius:10rpx;
  line-height: 40rpx;
  padding: 16rpx 25rpx;
  box-sizing: border-box;
  font-size:28rpx;
}

.formBox .textareaBox input{
  height: 80rpx;
  padding: 0 25rpx;
  width: 100%;
  background:rgba(0,0,0,0.06);
  border-radius:10rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size:28rpx;
}

.textareaBox .inputPlaceholder{
  color: #A7A7A7;
  font-size:28rpx;
} 