/* pages/mine/mine.wxss */
.shootingBg{
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.shootingBox{
  box-sizing: border-box;
  border-radius: 20rpx 20rpx 0 0;
  padding: 36rpx 28rpx;
  min-height: 100vh;
}

.shootingNum{
  font-size:36rpx;
  color:rgba(108,111,191,1);
  line-height:50rpx;
  font-weight: bold;
}

/* 标题行 */
.titleBox{
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  margin: 26rpx 0 22rpx;
}

.titleBox .title{
  width: 76%;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(0,0,0,1);
}

.titleBox .packUpBox{
  width:130rpx;
  height:42rpx;
  background:rgba(254,105,13,0.14);
  border-radius:20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:24rpx;
  color:#666;
}

.titleBox .packUpBox icon{
  font-size: 22rpx;
  color:#666;
  margin: -20rpx 0 0 6rpx;
}

.otherInfoBox{
  overflow: hidden;
  transition: height 0.8s;
}

.otherInfoBox .otherInfo{
  display: flex;
  align-items: flex-start;
  margin-top: 22rpx;
}

.otherInfoBox .otherInfo .infoTitle{
  display: flex;
  align-items: center;
  font-size:26rpx;
  color:rgba(0,0,0,1);
  flex-shrink: 0
}

.otherInfoBox .otherInfo .infoTitle icon{
  font-size:32rpx;
  color:#F45258;
  margin: -14rpx 10rpx 0 0;
}

.otherInfoBox .otherInfo:nth-of-type(2) .infoTitle icon{
  color: #37C591
}

.otherInfoBox .otherInfo:nth-of-type(3) .infoTitle icon{
  color: #6C6FBF
}

.otherInfoBox .otherInfo .infoTxt{
  font-size: 26rpx;
  color: #666;
  line-height: 38rpx;
  padding-top: 3rpx;
}

.contentBox{
  font-size:30rpx;
  color:rgba(0,0,0,1);
  line-height:80rpx;
  letter-spacing:6rpx;
  margin-top: 18rpx;
  display: block;
}